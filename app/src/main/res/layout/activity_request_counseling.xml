<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.activity.RequestCounselingActivity"
        android:orientation="vertical"
        android:paddingTop="8dp">

    <TextView style="@style/Title" android:id="@+id/request_counseling_title" android:text="이예솔 상담사" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <View style="@style/Divider" android:id="@+id/request_counseling_divider1" android:layout_marginBottom="20dp" app:layout_constraintTop_toBottomOf="@+id/request_counseling_title" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>


    <ScrollView android:layout_width="match_parent" android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/request_counseling_divider1"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:orientation="vertical" android:layout_margin="8dp">

            <androidx.cardview.widget.CardView
                    android:id="@+id/request_counseling_cv_1" android:layout_width="match_parent"
                    android:layout_height="170dp" app:cardElevation="8dp" app:contentPadding="8dp" app:cardUseCompatPadding="true">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView style="@style/Title" android:text="채팅 상담 1회기권"
                              android:id="@+id/request_counseling_tv_title_1"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
                              android:text="회기당 50분 * 1회\n결제일 후 2주간 유효"/>
                    <TextView android:id="@+id/request_counseling_tv_price_1" style="@style/Title2" android:text="20,000" android:textColor="@color/customRed" android:gravity="end"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/request_counseling_cv_2" android:layout_width="match_parent"
                    android:layout_height="170dp" app:cardElevation="8dp" app:contentPadding="8dp" app:cardUseCompatPadding="true">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView style="@style/Title" android:text="2주 프로그램"
                              android:id="@+id/request_counseling_tv_title_2"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
                              android:text="회기당 50분 * 1회\n결제일 후 2주간 유효"/>
                    <TextView android:id="@+id/request_counseling_tv_price_2" style="@style/Title2" android:text="20,000" android:textColor="@color/customRed" android:gravity="end"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/request_counseling_cv_4" android:layout_width="match_parent"
                    android:layout_height="170dp" app:cardElevation="8dp" app:contentPadding="8dp" app:cardUseCompatPadding="true">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView style="@style/Title" android:text="4주 프로그램"
                              android:id="@+id/request_counseling_tv_title_4"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
                              android:text="회기당 50분 * 1회\n결제일 후 2주간 유효"/>
                    <TextView android:id="@+id/request_counseling_tv_price_4" style="@style/Title2" android:text="20,000" android:textColor="@color/customRed" android:gravity="end"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/request_counseling_cv_10" android:layout_width="match_parent"
                    android:layout_height="170dp" app:cardElevation="8dp" app:contentPadding="8dp" app:cardUseCompatPadding="true">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView style="@style/Title" android:text="10주 프로그램"
                              android:id="@+id/request_counseling_tv_title_10"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
                              android:text="회기당 50분 * 1회\n결제일 후 2주간 유효"/>
                    <TextView android:id="@+id/request_counseling_tv_price_10" style="@style/Title2" android:text="20,000" android:textColor="@color/customRed" android:gravity="end"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView style="@style/Title2" android:text="상담을 몇 번이나 받아야 할까요?"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp"
                      android:text="@string/request_counseling_description"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
