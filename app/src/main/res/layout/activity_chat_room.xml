<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.ChatRoomActivity">

    <TextView style="@style/Title" android:id="@+id/chat_room_title" android:text="2주 프로그램 (1/2)"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@mipmap/chat_background"/>

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/chat_room_title" app:layout_constraintBottom_toTopOf="@+id/chat_room_input_box"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" >

            <!--notice-->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_margin="8dp"
                          android:orientation="vertical" android:background="@android:color/white"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <TextView android:id="@+id/item_chat_notice_title" android:text="안내" style="@style/Title2"/>
                <View style="@style/Divider"/>
                <TextView android:id="@+id/item_chat_notice_content" android:text="안녕하세요! 채팅 상담을 시작하신것을 환영합니다." android:layout_margin="8dp"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <!--counselor-->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="match_parent" android:padding="8dp"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/eco_home"/>

                <TextView android:id="@+id/item_chat_counselor_content" android:text="안녕하세요, 상담사 이예솔입니다.\n상담을 시작하기 전, 상담을 원하는 시간을 말씀해주세요."
                          android:maxWidth="250dp" android:background="@android:color/white" android:padding="16dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/item_chat_counselor_time" android:text="15:50" android:layout_gravity="bottom"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <!--client-->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal" android:gravity="end"
                          android:layout_width="match_parent" android:padding="8dp"
                          android:layout_height="wrap_content">
                <TextView android:id="@+id/item_chat_client_time" android:text="15:50" android:layout_gravity="bottom"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/item_chat_client_content" android:text="안녕하세요!\n저는 평일 오후 7시 이후가 좋아요."
                          android:maxWidth="250dp" android:background="@color/customYellow" android:padding="16dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout android:id="@+id/chat_room_input_box" android:layout_width="match_parent" android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:background="@android:color/white" android:layout_margin="8dp"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:orientation="horizontal"
                  android:gravity="center">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_camera"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="채팅 입력" android:layout_weight="1"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_send"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>