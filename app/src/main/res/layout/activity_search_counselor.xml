<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.activity.SearchCounselorActivity"
        android:orientation="vertical"

        android:paddingTop="8dp">

    <TextView style="@style/Title" android:id="@+id/search_counselor_tv_title" android:gravity="center" android:text="상담사 찾기" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView android:id="@+id/search_counselor_iv_ic_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_search" app:layout_constraintTop_toBottomOf="@+id/search_counselor_tv_title" app:layout_constraintEnd_toStartOf="@+id/search_counselor_iv_ic_filter"/>
    <ImageView android:id="@+id/search_counselor_iv_ic_filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_search" app:layout_constraintTop_toBottomOf="@+id/search_counselor_tv_title" app:layout_constraintEnd_toEndOf="parent"/>

    <View style="@style/Divider" android:id="@+id/search_counselor_divider_1" android:layout_marginBottom="20dp" app:layout_constraintTop_toBottomOf="@+id/search_counselor_iv_ic_search" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/search_counselor_tv_sort_many_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="상담횟수 많은 순" android:padding="8dp" app:layout_constraintTop_toBottomOf="@+id/search_counselor_divider_1" app:layout_constraintEnd_toStartOf="@+id/search_counselor_tv_sort_low_price"/>
    <TextView android:id="@+id/search_counselor_tv_sort_low_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="가격 낮은 순" android:padding="8dp" app:layout_constraintTop_toBottomOf="@+id/search_counselor_divider_1" app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView android:layout_width="match_parent" android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/search_counselor_tv_sort_low_price"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/search_counselor_bot_nav">
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:orientation="vertical" android:layout_margin="8dp">

            <androidx.recyclerview.widget.RecyclerView android:id="@+id/search_counselor_rv"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:visibility="visible">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/search_counselor_bot_nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/customLightGreen"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>
